{# templates/admin/user/_form.html.twig #}
{{ form_start(form) }}
  <div class="row g-3">
    <div class="col-md-6">
      {{ form_row(form.email) }}
    </div>
    <div class="col-md-3">
      {{ form_row(form.firstname) }}
    </div>
    <div class="col-md-3">
      {{ form_row(form.lastname) }}
    </div>

    {% if form.phone is defined %}
      <div class="col-md-4">
        {{ form_row(form.phone) }}
      </div>
    {% endif %}

    {% if form.roles is defined %}
      <div class="col-md-8">
        {{ form_row(form.roles) }}
      </div>
    {% endif %}

    {% if form.isVerified is defined %}
      <div class="col-md-3">
        {{ form_row(form.isVerified) }}
      </div>
    {% endif %}

    {% if form.subscriptionStatus is defined %}
      <div class="col-md-4">
        {{ form_row(form.subscriptionStatus) }}
      </div>
    {% endif %}

    {% if form.lastPaymentAt is defined %}
      <div class="col-md-5">
        {{ form_row(form.lastPaymentAt) }}
      </div>
    {% endif %}

    {% if form.stripeCustomerId is defined %}
      <div class="col-md-6">
        {{ form_row(form.stripeCustomerId) }}
      </div>
    {% endif %}
  </div>

  <div class="mt-3 d-flex gap-2">
    <button class="btn btn-primary">
      {{ submit_label|default('Enregistrer') }}
    </button>
    <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary">Annuler</a>
  </div>
{{ form_end(form) }}
