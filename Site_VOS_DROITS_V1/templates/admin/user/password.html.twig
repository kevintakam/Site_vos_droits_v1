{% extends 'base.html.twig' %}
{% block title %}Mot de passe — {{ user.email }}{% endblock %}

{% block body %}
<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

      <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h4 mb-0">Changer le mot de passe — {{ user.email }}</h1>
        <a class="btn btn-outline-secondary" href="{{ path('admin_user_edit', {id: user.id}) }}">Retour</a>
      </div>

      {% include 'admin/user/_flash.html.twig' ignore missing %}

      {{ form_start(form) }}
        {{ form_row(form.plainPassword) }}
        <div class="mt-3 d-flex gap-2">
          <button class="btn btn-warning">Mettre à jour</button>
          <a class="btn btn-outline-secondary" href="{{ path('admin_user_edit', {id: user.id}) }}">Annuler</a>
        </div>
      {{ form_end(form) }}

    </div>
  </div>
</div>
{% endblock %}